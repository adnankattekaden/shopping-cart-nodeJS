<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.product.Name}}</td>
                    <td>Rs: {{this.product.Price}}</td>
                    <td>
                        <button class="cart-item-count mr-3"
                            onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)">-</button>
                        <span id="{{this.product._id}}">{{this.quantity}}</span>
                        <button class="cart-item-count ml-3"
                            onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)">+</button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger">Remove</a>
                    </td>

                </tr>
                {{/each}}
            </tbody>
        </table>

        <hr>

        <div class="float-right pr-5">
            <h3 class="float-right mr-5">Total: Rs. <span id="totalAmnt">{{totalAmount}}</span>  /-</h3>
            <a href="/place-order" class="float-right btn btn-success mt-3" style="width: 100%;"> <b>Place Order</b> </a>
        </div>


    </div>
</section>