<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product/" class="btn btn-success ml-auto">Add</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{this._id}}</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger">DELETE</a>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">UPDATE</a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</section>